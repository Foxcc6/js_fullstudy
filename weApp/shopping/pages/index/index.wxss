/* pages/index/index.wxss */
swiper{
    height: 421rpx;
}
.slide-image{
    height: 100%;
    width: 100%;
}
.select-title,
.news-title{
    padding: 30rpx 0;
    color: #ab956d;
    font-weight: bold; 
    text-align: center;
}
.select-top,
.select-bottom{
    width: 100%;
    height: 375rpx;
}
.select-top__small{
    width: 375rpx;
    height: 100%;
    float: left;
}
.select-top__small image,
.select-top__small navigator,
.select-bottom image,
.select-bottom navigator
{
    width: 100%;
    height: 100%;
}
.newest-box{
    padding: 0 40rpx;
}
.newest-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin: 0 20rpx 20rpx 0;
    border-radius: 10px;
    background: #f5f6f5;
    text-align: center;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-list image{
    width: 175rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}
